#!/usr/bin/env ruby

$LOAD_PATH.unshift(File.expand_path("../../lib", __FILE__))
require "java_apps"

$stdout.sync = true

app_path = ARGV.first

find_java_build_file(app_path) do |build_file|
  puts <<-TEXT
The Cloud Foundry Java Buildpack expects compiled artifacts, but a #{build_file} file was found in the app upload directory.
When pushing your app, specify the path to the artifact by using 'cf push -p /path/to/artifact' or adding
'path: /path/to/artifact' to your manifest file.
TEXT
end

exit 1
